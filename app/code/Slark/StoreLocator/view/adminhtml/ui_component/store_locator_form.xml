<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">store_locator_form.store_locator_data_source</item>
            <item name="deps" xsi:type="string">store_locator_form.store_locator_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Store Locator</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">store</item>
            <item name="namespace" xsi:type="string">store_locator_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="back">
                <url path="*/*/index"/>
                <class>back</class>
                <label translate="true">Back</label>
            </button>
            <button name="reset">
                <class>reset</class>
                <label translate="true">Reset</label>
            </button>
            <button name="delete" class="Slark\StoreLocator\UI\Component\Control\StoreLocator\DeleteButton"/>
            <button name="save" class="Slark\StoreLocator\UI\Component\Control\StoreLocator\SaveButton"/>
        </buttons>
    </settings>
    <dataSource name="store_locator_data_source" component="Magento_Ui/js/form/provider">
        <settings>
            <submitUrl path="*/*/save"/>
        </settings>
        <dataProvider class="Slark\StoreLocator\UI\DataProvider\StoreLocator\EditDataProvider" name="store_locator_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>store_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">General</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <dataScope>general</dataScope>
        </settings>

        <field name="store name" formElement="input" sortOrder="20">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Name</label>
            </settings>
        </field>
        <field name="addres" formElement="input" sortOrder="20">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Addres</label>
            </settings>
        </field>
        <field name="work schedule" formElement="input" sortOrder="20">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Work Schedule</label>
            </settings>
        </field>
        <field name="latitude" formElement="input" sortOrder="20">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Latitude</label>
            </settings>
        </field>
        <field name="longitude" formElement="input" sortOrder="20">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Longitude</label>
            </settings>
        </field>
    </fieldset>
</form>
